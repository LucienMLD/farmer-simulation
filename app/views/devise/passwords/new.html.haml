.container.mt-5
  .row
    .col.col-md-4.offset-md-4
      %h1.mb-4= t("devise.sessions.forgot_password")
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = f.error_notification
        .mb-3
          = f.input :email,
            required: true,
            autofocus: true,
            input_html: { autocomplete: "email", class: 'form-control' }
        .mb-3
          = f.button :submit, t('devise.passwords.instructions'), class: 'btn btn-primary'
      = render "devise/shared/links"
