%nav
  - if user_signed_in?
    .px-3.py-2.text-bg-dark.border-bottom
      .container
        .d-flex.flex-wrap.align-items-center.justify-content-center.justify-content-lg-start
          %a.d-flex.align-items-center.my-2.my-lg-0.me-lg-auto.text-white.text-decoration-none{href: "/"}
            %svg.bi.me-2{"aria-label" => "Bootstrap", height: "32", role: "img", width: "40"}
              %use{"xlink:href" => "#bootstrap"}
          %ul.nav.col-12.col-lg-auto.my-2.justify-content-center.my-md-0.text-small
            %li
              %a.nav-link.text-secondary{href: "#"}
                %svg.bi.d-block.mx-auto.mb-1{height: "24", width: "24"}
                  %use{"xlink:href" => "#home"}
                Home
            %li
              %a.nav-link.text-white{href: "#"}
                %svg.bi.d-block.mx-auto.mb-1{height: "24", width: "24"}
                  %use{"xlink:href" => "#speedometer2"}
                Dashboard
            %li
              %a.nav-link.text-white{href: "#"}
                %svg.bi.d-block.mx-auto.mb-1{height: "24", width: "24"}
                  %use{"xlink:href" => "#table"}
                Orders
            %li
              %a.nav-link.text-white{href: "#"}
                %svg.bi.d-block.mx-auto.mb-1{height: "24", width: "24"}
                  %use{"xlink:href" => "#grid"}
                Products
            %li
              %a.nav-link.text-white{href: "#"}
                %svg.bi.d-block.mx-auto.mb-1{height: "24", width: "24"}
                  %use{"xlink:href" => "#people-circle"}
                Customers
  .px-3.py-2.border-bottom.mb-3.bg-primary
    .d-flex.flex-wrap.align-items-center.justify-content-center.justify-content-lg-start
      %a.d-flex.align-items-center.mb-2.text-black.mb-lg-0.text-decoration-none{href: "/"}
        -# %svg.bi.me-2{"aria-label" => "Bootstrap", height: "32", role: "img", width: "40"}
        -#   %use{"xlink:href" => "#bootstrap"}
        .bi.me-2= t('site_name')
      %ul.nav.col-12.col-lg-auto.me-lg-auto.mb-2.justify-content-center.mb-md-0
        %li
          %a.nav-link.px-2.text-black{href: "#"}= t('home')
        %li
          %a.nav-link.px-2.text-black{href: "#"} Features
        %li
          %a.nav-link.px-2.text-black{href: "#"} Pricing
        %li
          %a.nav-link.px-2.text-black{href: "#"} FAQs
        %li
          %a.nav-link.px-2.text-black{href: "#"} About
      .text-end
        - if user_signed_in?
          .nav-item.dropdown
          %button.nav-link.dropdown-toggle{"aria-expanded" => "false", "data-bs-toggle" => "dropdown", role: "button"}
            %span.bi.bi-person-fill{ 'aria-hidden': 'true' }
          %ul.dropdown-menu.dropdown-menu-lg-end
            %li
              = link_to t('.profile'), edit_user_registration_path, class: 'dropdown-item'
            %li
              = link_to t('devise.sessions.sign_out'), destroy_user_session_path, method: :delete, class: 'dropdown-item'
        - else
          = link_to t('devise.sessions.sign_in'), new_user_session_path, class: 'btn btn-secondary'
          = link_to t('devise.registrations.signe_up'), new_user_registration_path, class: 'btn btn-warning'

